---
import type { Tag } from "../types";
import CustomLink from "./CustomLink.astro";

interface Props {
  image: string;
  name: string;
  tags: Tag[];
  description: string;
  link: string;
  github_link: string;
}

const { image, name, tags, description, link, github_link } = Astro.props;
---

<li class="mb-14">
  <div class="flex flex-col md:flex-row gap-7">
    <div class="w-full md:w-1/2">
      <div
        class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-white lg:hover:border-gray-700"
      >
        <img
          alt={`Imagen del del proyecto ${name}`}
          class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
          loading="lazy"
          src={image}
        />
      </div>
    </div>

    <div class="w-full md:w-1/2">
      <h3 class="text-xl font-bold mb-3 text-gray-800 dark:text-white">
        {name}
      </h3>
      <div class="flex gap-3 mb-3">
        {
          tags.map((tag) => {
            return (
              <span class="flex gap-2 border rounded-full px-2 py-1 text-white bg-gray-800 border-gray-600 ">
                <tag.icon class="size-4" />
                <span class="text-xs">{tag.name}</span>
              </span>
            );
          })
        }
      </div>
      <p class="mb-4 text-gray-700 dark:text-gray-400">
        {description}
      </p>
      <CustomLink link={link}> Preview </CustomLink>
      <CustomLink link={github_link}> Github </CustomLink>
    </div>
  </div>
</li>
