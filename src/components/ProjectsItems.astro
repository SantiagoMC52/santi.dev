---
import type { Tag } from "../types";
import CustomLink from "./CustomLink.astro";

interface Props {
  image: string;
  name: string;
  tags: Tag[];
  description: string;
  link: string;
  github_link: string;
}

const { image, name, tags, description, link, github_link } = Astro.props;
---

<li class="mb-14">
  <div class="flex flex-col md:flex-row gap-7">
    <div class="w-full md:w-1/2">
      <div class="border-2 rounded-md overflow-hidden">
        <img
          src={image}
          alt={`Imagen de ejemplo del proyecto ${name}`}
          class="object-cover w-full h-56 rounded-sm hover:scale-105 transition-transform duration-300 ease-in-out"
        />
      </div>
    </div>

    <div class="w-full md:w-1/2">
      <h3 class="text-xl font-bold mb-3 text-gray-800 dark:text-white">
        {name}
      </h3>
      <div class="flex gap-3 mb-3">
        {
          tags.map((tag) => {
            return (
              <span class="flex gap-2 border rounded-full px-2 py-1 text-white bg-gray-800 border-gray-600 ">
                <tag.icon class="size-4" />
                <h6 class="text-xs">{tag.name}</h6>
              </span>
            );
          })
        }
      </div>
      <p class="mb-4 text-gray-700 dark:text-gray-400">
        {description}
      </p>
      <CustomLink link={link}> Preview </CustomLink>
      <CustomLink link={github_link}> Github </CustomLink>
    </div>
  </div>
</li>
