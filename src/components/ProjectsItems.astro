---
interface Props {
  image: string;
  name: string;
  tags: string;
  description: string;
  link: string;
}

const { image, name, tags, description, link } = Astro.props;
---

<li class="mb-14">
  <div class="flex flex-col md:flex-row gap-7">
    <div class="w-full md:w-1/2">
      <div class="border-2 rounded-md overflow-hidden">
        <img
          src={image}
          alt={`Imagen de ejemplo del proyecto ${name}`}
          class="object-cover w-full h-56 rounded-sm hover:scale-105 transition-transform duration-300 ease-in-out"
        />
      </div>
    </div>

    <div class="w-full md:w-1/2 [&>p]:mb-3">
      <h3 class="text-xl font-bold mb-3">{name}</h3>
      <p>{tags}</p>
      <p>
        {description}
      </p>

      <a
        href={link}
        target="_blank"
        class="inline-flex items-center justify-center gap-2 px-3 py-2 space-x-2 text-base text-white transition bg-gray-800 border border-gray-600 focus-visible:ring-yellow-500/80 text-md hover:bg-gray-800 hover:border-gray-900 group max-w-fit rounded-xl hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black"
      >
        Preview
      </a>
    </div>
  </div>
</li>
